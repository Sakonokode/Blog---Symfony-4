{% extends 'layouts/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {# <link rel="stylesheet" href="{{ asset('css/index.css') }}">#}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% for post in posts %}
            <div class="row">
                <div class="col"></div>
                <div class="col-7">
                    <div class="jumbotron">
                        <h2>
                            <a href="{{ path('read', {'slug': post.slug}) }}">{{ post.title }}</a>
                        </h2>
                        <p>
                            {{ post.description }}
                        </p>
                        <div class="row">
                            <div class="col">
                                <h2>
                                    {{ post.author.email }}
                                </h2>
                            </div>
                            <div class="col"></div>
                            <div class="col">
                                <h2>
                                    {{ post.created|date("d/m/Y") }}
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col"></div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}