{% extends 'layouts/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col"></div>
            <div class="col-3">
                <form action="{{ path('login') }}" method="post">
                    <h2>Sign In</h2>
                    <div class="form-group">
                        <label for="email" class="required">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="_username">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="password" class="required">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="_password">
                    </div>
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
{% endblock %}